{
  "name": "ft-poller",
  "version": "0.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/Financial-Times/ft-poller"
  },
  "license": "MIT",
  "description": "An http client to periodically fetch and cache data from web services",
  "main": "./src/server.js",
  "directories": {
    "lib": "./lib"
  },
  "dependencies": {
    "isomorphic-fetch": "^2.0.0",
    "n-eager-fetch": "^4.0.0"
  },
  "devDependencies": {
    "@financial-times/n-gage": "^8.3.2",
    "chai": "^3.3.0",
    "check-engine": "^1.10.1",
    "eslint": "^6.0.0",
    "lintspaces-cli": "^0.6.0",
    "mocha": "^2.3.3",
    "nock": "^2.13.0",
    "npm-prepublish": "^1.2.2",
    "sinon": "^1.10.3",
    "snyk": "^1.167.2",
    "timer-shim": "^0.3.0"
  },
  "scripts": {
    "prepare": "npx snyk protect || npx snyk protect -d || true",
    "preinstall": "[ \"$INIT_CWD\" != \"$PWD\" ] || npm_config_yes=true npx check-engine"
  },
  "engines": {
    "node": "14.x || 16.x",
    "npm": "7.x || 8.x"
  },
  "husky": {
    "hooks": {
      "commit-msg": "node_modules/.bin/secret-squirrel-commitmsg",
      "pre-commit": "node_modules/.bin/secret-squirrel",
      "pre-push": "make unit-test && make verify -j3"
    }
  },
  "volta": {
    "node": "16.14.1",
    "npm": "7.20.2"
  }
}
